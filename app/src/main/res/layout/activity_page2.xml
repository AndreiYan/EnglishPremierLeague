<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.englishpremierleague.Page2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111C3C"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111C3C"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="310dp"
                android:background="@drawable/tots" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Who's Badge it is"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="italic" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RadioGrouptotts">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="CSKA"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="West Ham"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Tottenham"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Arsenal"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:text="Crystal Palace"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </RadioGroup>


            <Button
                android:id="@+id/submit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Submit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/arsen" />

            <EditText
                android:id="@+id/manager_Name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:gravity="center"
                android:hint="Please Enter Managers Last Name"
                android:inputType="textCapWords"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/submit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Submit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="There are only few clubs that have never relegated from Premier League. What are they?"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="italic" />

            <android.support.v7.widget.AppCompatCheckBox

                android:id="@+id/checkboxArsenal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Arsenal"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxChelsea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Chelsea"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxEverton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Everton"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxLiverpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Liverpool"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxMunt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Manchester Unt"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxTotts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Tottenham"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxMcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Manchester City"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxWham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="West Ham"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:buttonTint="#FFFFFF"
                />

            <Button
                android:id="@+id/submit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Submit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="Manchester United have won the most championships. How Many?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="italic" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RadioGroupMut">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="#FFFFFF"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="#FFFFFF"
                    android:text="25"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="#FFFFFF"
                    android:text="18"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="#FFFFFF"
                    android:text="13"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="#FFFFFF"
                    android:text="21"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </RadioGroup>

            <Button
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Final Submit" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
